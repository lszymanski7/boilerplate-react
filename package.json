{
    "name": "boilerplate-react",
    "version": "1.0.0",
    "description": "Boilerplate for creating projects in the JavaScript programming language based on React and Redux libraries. It includes the basic configuration of tools such as Webpack, Babel, Jest, Express, ESLint and Prettier.",
    "author": "Łukasz Szymański",
    "license": "MIT",
    "main": "src/index.js",
    "private": true,
    "scripts": {
        "build": "webpack --config config/webpack/webpack.prod.js",
        "dev-server": "webpack serve --config config/webpack/webpack.dev.js",
        "eslint:check": "npx eslint .",
        "eslint:fix": "npx eslint --fix .",
        "heroku-postbuild": "npm run build",
        "prettier:check": "npx prettier --check .",
        "prettier:fix": "npx prettier --write .",
        "start": "node server/server.js",
        "test": "jest --config config/jest/jest.config.js",
        "test:coverage": "jest --config config/jest/jest.config.js --coverage",
        "test:watch": "jest --config config/jest/jest.config.js --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lszymanski7/boilerplate-react.git"
    },
    "bugs": {
        "url": "https://github.com/lszymanski7/boilerplate-react/issues"
    },
    "homepage": "https://github.com/lszymanski7/boilerplate-react#readme",
    "dependencies": {
        "@csstools/normalize.css": "^12.0.0",
        "@reduxjs/toolkit": "^1.9.1",
        "express": "^4.18.2",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-redux": "^8.0.5",
        "react-router-dom": "^6.4.5",
        "redux-logger": "^3.0.6"
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@babel/core": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-react": "^7.18.6",
        "@testing-library/dom": "^8.19.0",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.1",
        "babel-jest": "^29.3.1",
        "babel-loader": "^9.1.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.2",
        "css-minimizer-webpack-plugin": "^4.2.2",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.6",
        "eslint-plugin-jest-dom": "^4.0.3",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-testing-library": "^5.9.1",
        "html-loader": "^4.1.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "mini-css-extract-plugin": "^2.7.2",
        "prettier": "^2.8.1",
        "sass": "^1.56.2",
        "sass-loader": "^13.2.0",
        "style-loader": "^3.3.1",
        "terser-webpack-plugin": "^5.3.6",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.0",
        "webpack-merge": "^5.8.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
